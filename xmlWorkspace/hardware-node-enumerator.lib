. common-hardware-extraction-functions.lib

#--------------------Hardware Node XML Record Formatter------------------------#
function generateHardwareXmlRecord() {
  
 echo -e "<record>
    <manufacturer>$manufacturer</manufacturer>
    <model>$model</model>
    <product>$product</product>
    <serialnumber>$serialnumber</serialnumber>
    <partnumber>$partnumber</partnumber>
    <bios>$bios</bios>
    <os>$os</os>
    <processors>$processors</processors>
    <physicalmemory>$physicalmemory</physicalmemory>
    <physicalmemorydet>$physicalmemorydet</physicalmemorydet>
    <visiblememory>$visiblememory</visiblememory>
    <displayadapters>$displayadapters</displayadapters>
    <networkadapters>$networkadapters</networkadapters>
    <diskdrives>$diskdrives</diskdrives>
    <cdromdrives>$cdromdrives</cdromdrives>
    <chassis>$chassis</chassis>
    <domainrole>$domainrole</domainrole>
</record>"
}
  


